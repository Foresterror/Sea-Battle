<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane id="AnchorPane" fx:id="anchorPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="475.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.Controller">
    <children>
        <TabPane fx:id="tabPane" layoutX="14.0" layoutY="14.0" prefHeight="277.0" prefWidth="573.0"
                 tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab fx:id="gameTab" onSelectionChanged="#gameTabSelected" text="Игра">
                    <content>
                        <AnchorPane id="Content" fx:id="playAnchorPane" minHeight="0.0" minWidth="0.0"
                                    prefHeight="217.0" prefWidth="573.0">
                            <children>
                                <Pane fx:id="myFieldPane" focusTraversable="true" layoutX="13.5" layoutY="31.5"
                                      onMouseClicked="#myFieldClicked" prefHeight="200.0" prefWidth="200.0"/>
                                <Pane fx:id="enemyFieldPane" layoutX="225.5" layoutY="31.5"
                                      onMouseClicked="#enemyFieldClicked" prefHeight="200.0" prefWidth="200.0"/>
                                <Label layoutX="85.0" layoutY="10.0" text="Ваше поле"/>
                                <Label layoutX="281.0" layoutY="10.0" text="Вражеское поле"/>
                                <ToggleButton fx:id="readyToggleButton" layoutX="472.0" layoutY="32.0"
                                              mnemonicParsing="false" onAction="#ready" text="Готов"/>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab fx:id="editTab" closable="true" disable="false" text="Редактирование">
                    <content>
                        <AnchorPane id="Content" fx:id="editAnchorPane" minHeight="0.0" minWidth="0.0"
                                    onKeyPressed="#editPaneKeyPressed" onKeyReleased="#editPaneKeyReleased"
                                    prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <Pane fx:id="shipyardPane" layoutX="231.0" layoutY="33.0">
                                    <children>
                                        <RadioButton fx:id="radioDeck2" layoutY="39.0" mnemonicParsing="false"
                                                     onAction="#radioDeckOnAction2" selected="false"
                                                     text="двухпалубный">
                                            <toggleGroup>
                                                <ToggleGroup fx:id="toggleDeck"/>
                                            </toggleGroup>
                                        </RadioButton>
                                        <RadioButton fx:id="radioDeck4" mnemonicParsing="false"
                                                     onAction="#radioDeckOnAction4" selected="true"
                                                     text="четырехпалубный" toggleGroup="$toggleDeck" wrapText="true"/>
                                        <RadioButton fx:id="radioDeck1" layoutY="59.0" mnemonicParsing="false"
                                                     onAction="#radioDeckOnAction1" selected="false" text="однопалубный"
                                                     toggleGroup="$toggleDeck"/>
                                        <RadioButton fx:id="radioDeck3" layoutY="19.0" mnemonicParsing="false"
                                                     onAction="#radioDeckOnAction3" selected="false" text="трехпалубный"
                                                     toggleGroup="$toggleDeck"/>
                                        <Label fx:id="amountLabel3" layoutX="137.0" layoutY="19.0" text="2"/>
                                        <Label fx:id="amountLabel4" layoutX="137.0" text="1"/>
                                        <Label fx:id="amountLabel2" layoutX="137.0" layoutY="39.0" text="3"/>
                                        <Label fx:id="amountLabel1" layoutX="137.0" layoutY="59.0" text="4"/>
                                    </children>
                                </Pane>
                                <Pane fx:id="editPane" focusTraversable="true" layoutX="13.5" layoutY="31.5"
                                      onMouseClicked="#editPaneMouseClicked" onMouseExited="#editPaneMouseExited"
                                      onMouseMoved="#editPaneMouseMoved" prefHeight="200.0" prefWidth="200.0"/>
                                <Label layoutX="85.0" layoutY="10.0" text="Ваше поле"/>
                                <Button fx:id="saveFieldButton" layoutX="401.0" layoutY="32.0" mnemonicParsing="false"
                                        onAction="#saveField" prefWidth="156.0" text="Сохранить поле"/>
                                <Button fx:id="loadFieldButton" layoutX="401.0" layoutY="54.0" mnemonicParsing="false"
                                        onAction="#loadField" prefWidth="156.0" text="Загрузить поле"/>
                                <Button fx:id="setRestButton" layoutX="401.0" layoutY="76.0" mnemonicParsing="false"
                                        onAction="#setRest" prefWidth="156.0" text="Расставить остальные"/>
                                <Button fx:id="setAllButton" layoutX="401.0" layoutY="98.0" mnemonicParsing="false"
                                        onAction="#setAll" prefWidth="156.0" text="Расставить все"/>
                                <Button id="setAllButton" fx:id="clearFieldButton" layoutX="401.0" layoutY="120.0"
                                        mnemonicParsing="false" onAction="#clearField" prefWidth="156.0"
                                        text="Очистить поле"/>
                                <Label focusTraversable="false" layoutX="231.0" layoutY="116.0" mouseTransparent="true"
                                       text="&lt;Ctrl&gt; - vertical orientation"/>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab fx:id="networkTab" text="Сеть">
                    <content>
                        <AnchorPane id="Content" fx:id="networkAncorPane" minHeight="0.0" minWidth="0.0"
                                    prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <RadioButton layoutX="14.0" layoutY="33.0" mnemonicParsing="false"
                                             onAction="#withoutServerSelected" selected="true" text="Без сервера">
                                    <toggleGroup>
                                        <ToggleGroup fx:id="toggleServer"/>
                                    </toggleGroup>
                                </RadioButton>
                                <RadioButton layoutX="231.0" layoutY="33.0" mnemonicParsing="false"
                                             onAction="#withServerSelected" selected="false" text="С сервером"
                                             toggleGroup="$toggleServer"/>
                                <RadioButton layoutX="14.0" layoutY="75.0" mnemonicParsing="false"
                                             onAction="#hostSelected" selected="true" text="Ожидать подключение">
                                    <toggleGroup>
                                        <ToggleGroup fx:id="toggleConnection"/>
                                    </toggleGroup>
                                </RadioButton>
                                <RadioButton layoutX="14.0" layoutY="91.0" mnemonicParsing="false"
                                             onAction="#clientSelected" text="Подключиться"
                                             toggleGroup="$toggleConnection"/>
                                <TextField fx:id="ipTextField" disable="false" layoutX="14.0" layoutY="107.0"
                                           onAction="#ipEntered" prefWidth="200.0" promptText="Введите IP адрес"
                                           text="127.0.0.1"/>
                                <Button fx:id="connectButton" layoutX="456.0" layoutY="32.0" mnemonicParsing="false"
                                        onAction="#connect" text="Подключиться"/>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab fx:id="miscTab" text="Разное">
                    <content>
                        <AnchorPane id="Content" fx:id="micsAnchorPane" minHeight="0.0" minWidth="0.0"
                                    prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <TextField fx:id="nameTextField" layoutX="14.0" layoutY="14.0" onAction="#nameEntered"
                                           prefWidth="200.0" promptText="Имя" text="Саша"/>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
        <SplitPane id="SplitPane" fx:id="chatSplitPane" dividerPositions="0.7338129496402878" layoutX="15.0"
                   layoutY="327.0" orientation="VERTICAL" prefWidth="572.0">
            <items>
                <ScrollPane id="ScrollPane" fx:id="chatScrollPane" fitToHeight="true" fitToWidth="true"
                            hbarPolicy="NEVER" pannable="true" prefViewportHeight="93.0" prefViewportWidth="570.0">
                    <content>
                        <TextArea id="" fx:id="chatTextArea" editable="false" focusTraversable="false"
                                  mouseTransparent="true" prefHeight="88.0" prefWidth="572.0" promptText="Чат"
                                  wrapText="true"/>
                    </content>
                </ScrollPane>
                <TextArea id="editChatArea" fx:id="editChatTextArea" onKeyReleased="#editChatKeyReleased"
                          onKeyTyped="#editChatKeyTyped" prefHeight="38.0" prefWidth="572.0" wrapText="true"/>
            </items>
        </SplitPane>
    </children>
</AnchorPane>
